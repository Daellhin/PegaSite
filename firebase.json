{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/articles/**",
        "destination": "/fallback.html"
      },
      {
        "source": "/pages/**",
        "destination": "/fallback.html"
      },
      {
        "source": "/pages/edit/**",
        "destination": "/fallback.html"
      }
    ],
    "cleanUrls": true
  },
  "emulators": {
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  }
}
